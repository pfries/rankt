{
    "query": {
        "bool": {
            "filter": [
                { 
                    "term": {
                        "project": "{{ project }}"
                    }
                },
                {
                    "term": {
                        "case": "{{ case }}"
                    }
                }
            ]
        }
    },
    "aggregations": {
        "snapshots": {
            "terms": {
                "field": "snapshot",
                "order" : { "_term" : "desc" },
                "size": {{ size }}
            },
            "aggregations": {
                "keywords": {
                    "terms": {
                        "field": "keywords",
                        "order" : { "_term" : "asc" }
                    },
                    "aggregations": {
                        "doc_positions": {
                            "top_hits": { 
                                "sort": {
                                    "doc_position": "asc"  
                                },
                                "_source": {
                                    "include": [ "documentid", "doc_position", "doc_explain", "doc_score" ]
                                },
                                size: 10
                            }
                        }
                    }
                }
            }
        }
    }
}
